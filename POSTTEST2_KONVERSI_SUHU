keputusan_user = "1"
while keputusan_user == "1":
    print ( )
    print("""SELAMAT DATANG DI PROGRAM KONVERSI SUHU, SILAHKAN PERHATIKAN PILIHAN DI BAWAH :
    A. Fahrenheit → Celsius
    B. Kelvin → Celcius
    C. Reamur → Celcius""")
    
    konversi = str(input("Sudah menentukan? Silahkan pilih antara A, B, atau C = "))
    if konversi == "A" :
        T_awal = int(input("Suhu awal Fahrenheit = "))
        Dari_T = "Celcuis"
        jenis_T = "Fahrenheit"
        T_Celcius =((T_awal - 32) * 5 / 9)    
    elif konversi == "B" :
        T_awal = int(input("Suhu awal Kelvin = "))
        Dari_T = "Celcius"
        jenis_T = "Kelvin"
        T_Celcius = (T_awal - 273)
    elif konversi == "C" :
        T_awal = int(input("Suhu awal Reamur = "))
        Dari_T = "Celcius"
        jenis_T = "Reamur"
        T_Celcius = ((5 / 4 * T_awal))
    else :
        print("Mungkin anda salah menginputkan data")

    print("Perubahan suhu dari ", jenis_T, "→", Dari_T, )
    print(T_awal, jenis_T, "=" , float(T_Celcius), Dari_T)
    keputusan_user = input("Perlu mengkonversi suhu lagi,? tentu = 1 atau cukup = 0 : ")
print ("TERIMA KASIH SUDAH MENGGUNAKAN PROGRAM INI, SEMOGA HARIMU MENYENANGKAN")
print ( )
